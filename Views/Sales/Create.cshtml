@model MvcDemo.Models.EF.Sale

@{
    ViewBag.Title = "Add Sale";
    Layout = "salesmaster.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

